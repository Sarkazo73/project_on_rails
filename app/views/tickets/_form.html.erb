<%= form_for [@ticket] do |form| %>
  <%= render 'common/errors', resource: @ticket %>
  <%= form.hidden_field :train_id %>
  <%= form.hidden_field :start_station_id %>
  <%= form.hidden_field :end_station_id %>

  <div class="field">
    <p>
      <%= form.label :passport_number %>
      <%= form.text_field :passport_number %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.label :full_name %>
      <%= form.text_field :full_name %>
    </p>
  </div>

  <div class="actions">
    <p>
      <%= form.submit t('.submit', action: @ticket.new_record? ? 'Создать' : 'Изменить' ) %>
    </p>
  </div>
<% end %>