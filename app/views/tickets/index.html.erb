<p id="notice"><%= notice %></p>

<h1><%= t('.list_tickets') %></h1>

<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% current_user.tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.start_station.title %></td>
      <td><%= ticket.end_station.title %></td>
      <td><%= link_to t('common.show'), ticket_path(user_id: current_user.id, id: ticket.id) %></td>
      <td><%= link_to t('common.edit'), edit_ticket_path(user_id: current_user.id, id: ticket.id) %></td>
      <td><%= link_to t('common.destroy'), ticket_path(user_id: current_user.id, id: ticket.id), method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_ticket'), search_path %>