<p id="notice"><%= notice %></p>

<h1>Carriages</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @carriages.each do |carriage| %>
    <tr>
      <td><%= carriage.number %></td>
      <td><%= link_to 'Show', carriage %></td>
      <td><%= link_to 'Edit', edit_carriage_path(carriage) %></td>
      <td><%= link_to 'Destroy', carriage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Carriage', new_carriage_path %>