<%= form_with(model: @route) do |form| %>
  <%= render 'common/errors', resource: @route %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <dev class="field">
    <%= form.label :railway_station_ids, "Stations" %>
    <%= form.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {  }, { multiple: true } %>
  </dev>

  <div class="actions">
    <%= form.submit "#{ @route.new_record? ? 'create' : 'edit' }" %>
  </div>
<% end %>