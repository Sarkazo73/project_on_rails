<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Trains:</strong>
  <% @route.trains.each do |train| %>
    <tr><%= train.number %></tr>
  <% end %>
</p>

<p>
  <strong>Stations:</strong>
  <% @route.railway_stations_routes.each do |station_route| %>
    <tr><%= station_route.station_number %></tr>
    <tr><%= station_route.railway_station.title %></tr>
  <% end %>
</p>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
