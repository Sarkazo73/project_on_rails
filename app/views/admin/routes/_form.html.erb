<%= form_with(model: [:admin, @route]) do |form| %>
  <%= render 'common/errors', resource: @route %>

  <div class="field">
    <p>
      <%= form.label :name, t('.name') %>
      <%= form.text_field :name %>
    </p>
  </div>

  <div class="field">
    <p>
      <%= form.label :railway_station_ids, t('.stations') %>
      <%= form.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {  }, { multiple: true } %>
    </p>
  </div>

  <div class="actions">
    <p>
      <%= form.submit t('.submit', action: @route.new_record? ? 'Создать' : 'Изменить' ) %>
    </p>
  </div>
<% end %>