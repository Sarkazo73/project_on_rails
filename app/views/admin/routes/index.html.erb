<h1><%= t('.list_routes') %></h1>

<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @routes.each do |route| %>
    <tr>
      <td><%= route.name %></td>
      <td><%= link_to t('common.show'), [:admin, route] %></td>
      <td><%= link_to t('common.edit'), edit_admin_route_path(route) %></td>
      <td><%= link_to t('common.destroy'), [:admin, route], method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('common.back'), admin_root_path %>
<%= link_to t('.new_route'), new_admin_route_path %>
