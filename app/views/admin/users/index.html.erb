<h1><%= t('.list_users') %></h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to t('common.show'), [:admin, user] %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user) %></td>
        <td><%= link_to t('common.destroy'), [:admin, user], method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
        <td>admin - <%= user.admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('common.back'), admin_root_path %> |
<%= link_to t('.new_user'), new_admin_user_path %>