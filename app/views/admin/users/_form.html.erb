<%= form_with(model: [:admin, @user]) do |form| %>
  <%= render 'common/errors', resource: @user %>

  <div class="field">
    <%= form.label :name, t('.name') %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: @user.new_record? ? 'Создать' : 'Изменить' ) %>
  </div>
<% end %>