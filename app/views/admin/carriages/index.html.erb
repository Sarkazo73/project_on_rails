<h1><%= t('.list_carriages') %></h1>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @train.carriages.each do |carriage| %>
    <tr>
      <td><%= carriage.number %></td>
      <td><%= link_to t('common.show'), admin_train_carriage_path(train_id: @train.id,id: carriage.id) %></td>
      <td><%= link_to t('common.edit'), edit_admin_train_carriage_path(train_id: @train.id,id: carriage.id) %></td>
      <td><%= link_to t('common.destroy'), admin_train_carriages_path(train_id: @train.id,id: carriage.id), method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('common.back'), admin_trains_path %> |
<%= link_to t('.new_carriage'), new_admin_train_carriage_path %>