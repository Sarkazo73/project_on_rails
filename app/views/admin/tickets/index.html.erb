<h1><%= t('.list_tickets') %></h1>

<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.number %></td>
      <td><%= link_to t('common.show'), [:admin, ticket] %></td>
      <td><%= link_to t('common.edit'), edit_admin_ticket_path(ticket) %></td>
      <td><%= link_to t('common.destroy'), [:admin, ticket], method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
      <td>can buy? - <%= ticket.user_id.nil? %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to t('common.back'), admin_root_path %> |
<%= link_to t('.new_ticket'), new_admin_ticket_path %>
