<h1><%= t('.list_trains') %></h1>

<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @trains.each do |train| %>
    <tr>
      <td><%= train.number %></td>
      <td><%= link_to t('common.show'), [:admin, train] %></td>
      <td><%= link_to t('common.edit'), edit_admin_train_path(train) %></td>
      <td><%= link_to t('common.destroy'), [:admin, train], method: :delete, data: { confirm: t('common.are_you_sure') } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to t('common.back'), admin_root_path %> |
<%= link_to t('.new_train'), new_admin_train_path %>
