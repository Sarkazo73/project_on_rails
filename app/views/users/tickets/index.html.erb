<h1>list ticket</h1>

<table>
  <thead>
  <tr>
    <th>number</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.start_station.title %></td>
      <td><%= ticket.end_station.title %></td>
      <td><%= link_to 'Show', user_ticket_path(user_id: @user.id, id: ticket.id) %></td>
      <td><%= link_to 'Edit', edit_user_ticket_path(user_id: @user.id, id: ticket.id) %></td>
      <td><%= link_to 'Destroy', user_ticket_path(user_id: @user.id, id: ticket.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

